             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             
             mc:Ignorable="d"
             x:Class="FallDetectionApp.Views.GeoDataPage">
             <!--xmlns:vm="clr-namespace:FallDetectionApp.ViewModels"-->

    <!--<ContentPage.BindingContext>
        <vm:GeoDataViewModel />
    </ContentPage.BindingContext>-->

